import java.util.*;
public class Main
{
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int arr[]=new int[n];
        int i;
        for(i=0;i<n;i++)
        {
            arr[i]=sc.nextInt();
        }
        int k=4;
        int windowsum=0;
        for(i=0;i<k;i++)
        {
            windowsum=windowsum+arr[i];
        }
        int maxsum=windowsum;
        for(i=k;i<n;i++)
        {
            windowsum=windowsum-arr[i-k]+arr[i];
            maxsum=Math.max(maxsum,windowsum);
        }
        System.out.println("maximum sum of 4 concesutive elements"+maxsum);
    }
}
